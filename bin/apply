#!/bin/bash

#Exit immediately if a command exits with a non-zero status
set -e

#Usage
USAGE="Usage: kn apply [DIR] (the current directory by default)"

HOST_CLOUD=$(grep -w "provider" terraform.tfvars | cut -d "=" -f 2- | awk -F\" '{print $(NF-1)}')

# Import image (AWS doesn't need it)
if [ "$HOST_CLOUD" = 'openstack' ] || [ "$HOST_CLOUD" = 'gce' ] || [ "$HOST_CLOUD" = 'gce' ]; then
  export GCE_ACCOUNT_FILE_PATH="$PWD/service-account.json"
  export TF_VARS_FILE="$PWD/terraform.tfvars"
  /opt/KubeNow/bin/image-create-"$HOST_CLOUD".sh
fi
# Deploy
terraform init --plugin-dir=/terraform_plugins "/opt/KubeNow/$HOST_CLOUD"
# shellcheck disable=SC2086
terraform apply $TERRAFORM_OPT "/opt/KubeNow/$HOST_CLOUD"
# shellcheck disable=SC2086
ansible-playbook $ANSIBLE_OPT "/opt/KubeNow/playbooks/install-core.yml"
